<!DOCTYPE html>
<%-include("partials/header.ejs")%>

<div class="container">
    <h4>
        Incluir nova postagem:
    </h4>
    <div class="m-2">
        <a href="/submit"><button class="btn btn-primary">    Incluir nova postagem:
        </button></a>
    </div>
</div>


<div class="container">
    <h4>
        Editar,visualizar ou apagar postagens:
    </h4>
    <div class="row">
        <div class="col-6">
            <% if(locals.poetry){ %>
                <%    poetry.forEach(function(elem,index){%>
                    <div class="col-lg-6 poetry-title text-center" >
                        <a href="/poetrybody/<%=elem.id%>">
                            <h4><%=elem.title%></h4>
                        </a>
                        <p>Autor: <%=elem.autor%></p>
                    </div>
                    <a class="edit" href="/submit/<%= elem.id %>">Edit</a>
                    <a class="delete" href="/delete/<%= elem.id %>">Delete</a>
          
                <%    })%>       
        </div>
        <div class="col-6">
            <form action="/submit" method="post">
                <input type="text"name="id" style="display: none;">
                <label for="title" class="form-label" >Titulo da Poesia </label><br>
                <input type="text" name="title" required class="form-control"> <br>
                <label for="title" class="form-label" >Autor da Poesia </label><br>
                <input type="text" name="autor" required class="form-control"> <br>
                <label for="poetry" class="form-label">Corpo do poema</label><br>
                <textarea name="body" id="" cols="50" rows="20" wrap="hard" resize="none" required placeholder="Insira o poema aqui" class="form-control"></textarea><br>
                <input type="submit" value="Enviar Poesia" class="btn btn-primary"><br>
    
            </form>

        </div>



    </div>
</div>


<%}else{%>
<h1>Ainda sem poesias</h1>
<%}%>


<%-include("partials/footer.ejs")%>
